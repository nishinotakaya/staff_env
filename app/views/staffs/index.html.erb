<div class="staff_center">
<p id="notice"><%= notice %></p>

<h1>従業員一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.name %></td>
        <td><%= staff.email %></td>
        <td><%= staff.cellphone %></td>
        <td><%= link_to '従業員詳細', staff, class: "btn btn-primary"%></td>
        <td><%= link_to '従業員編集', edit_staff_path(staff), class: "btn btn-success" %></td>
        <td><%= link_to '削除', staff, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '従業員追加', new_staff_path, class: "btn btn-success" %>
</div>
